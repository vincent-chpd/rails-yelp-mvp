
<div class="container">
  <h1>Restaurants</h1>

  <div class="row">
    <div class="col-sm-6">
      <% @restaurants.each do |restaurant| %>
        <div class="card-body border border-dark my-3">
          <h3 class="card-title" ><%= restaurant.name %></h3>
          <p class="card-text" ><%= restaurant.address %></p>
          <p class="card-text"><%=restaurant.phone_number %></p>
          <p class="card-text"><%=restaurant.category %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
